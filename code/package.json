{
  "name": "zadoox",
  "version": "0.1.0",
  "private": true,
  "description": "Zadoox - AI-powered documentation platform",
  "scripts": {
    "dev": "pnpm --parallel --filter './packages/*' dev",
    "build": "pnpm --recursive build",
    "test": "pnpm --recursive test",
    "test:watch": "pnpm --recursive test:watch",
    "test:coverage": "pnpm --recursive test:coverage",
    "lint": "pnpm --recursive lint",
    "lint:strict": "pnpm --recursive lint:strict",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0"
}

